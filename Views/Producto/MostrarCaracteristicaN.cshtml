                    <input type="hidden" asp-for="Codigo" class="form-control" />
                    <input type="hidden" asp-for="Color" class="form-control" />
                    <input type="hidden" asp-for="Sexo" class="form-control">
                    <input type="hidden" asp-for="Tipo" class="form-control">
                    <input type="hidden" asp-for="Talla25" class="form-control">
                    <input type="hidden" asp-for="Talla26" class="form-control" />
                    <input type="hidden" asp-for="Talla27" class="form-control" />
                    <input type="hidden" asp-for="Talla28" class="form-control" />
                    <input type="hidden" asp-for="Talla29" class="form-control" />
                    <input type="hidden" asp-for="Talla30" class="form-control" />
                    
       <div class="form-group">
            <label class="control-label">Escribe las caracterisiticas del calzado</label>
            <input type="text" maxlength="60" minlength="5" asp-for="Descripcion" >
       </div>
       <button class="btn btn-success"  value="Registrar">Volver</button>
              
   </form>
   

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>

</section>

</div>

