@model Software_2.Models.ProductoN
<div class="background_edit background_total3 pt-5">
 <h1 class="white">Mostrar Caracteristicas del producto</h1>



<section>

  <div class="container-fluid">
    <div class="row justify-content-center" >
      <div class="col-xl-5">
          <div class="card">
            <div class="justify-content-center text-center">
              <div class="container justify-content-center text-center">
                  <div class="container col-md-10 p-4">
  
                    <form asp-controller="Producto" asp-action="MostrarCaracteristicaN">

                    <input type="hidden" asp-for="ID" />
