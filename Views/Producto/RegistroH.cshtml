@model Software_2.Models.ProductoH
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>



<div class="background_edit background_total pt-5">
 <h1 class="white" >Registrar Sección Hombre</h1>



<section>

  <div class="container-fluid">
    <div class="row justify-content-center" >
      <div class="col-xl-5">
          <div class="card">
            <div class="justify-content-center text-center">
              <div class="container justify-content-center text-center">
                  <div class="container col-md-10 p-4">
   
                    <form asp-controller="Producto" asp-action="RegistrarH">
       <div class="form-group">
            <label class="control-label">Nombre:</label>
            <input asp-for="Nombre" type="text" maxlength="20" minlength="5" class="form-control"/>
       </div>
       <div class="form-group">
            <label class="control-label">Código:</label>
            <input asp-for="Codigo" class="form-control"/>
       </div>
            <div class="form-group">
            <label class="control-label">Color:</label>
            <select asp-for="Color" class="form-control">
                <option value="amarillo">Amarillo</option>
                <option value="rojo">Rojo</option>
                <option value="azul">Azul</option>
                <option value="verde">Verde</option>
                <option value="morado">Morado</option>
                <option value="negro">Negro</option>
                <option value="naranja">Naranja</option>
                <option value="rosado">Rosado</option>
              </select>
       </div>
            <div class="form-group">
            <label class="control-label">Tipo:</label>
            <select asp-for="Tipo" class="form-control">
                <option value="zapatillas">Zapatillas</option>
                <option value="sandalias">Sandalias</option>
            </select>
       </div>
              <div class="form-group">
            <label class="control-label">Talla 40:</label>
            <input asp-for="Talla40" class="form-control"/>
       </div>
              <div class="form-group">
            <label class="control-label">Talla 41:</label>
            <input asp-for="Talla41" class="form-control"/>
       </div>
              <div class="form-group">
            <label class="control-label">Talla 42:</label>
            <input asp-for="Talla42" class="form-control"/>
       </div>
              <div class="form-group">
            <label class="control-label">Talla 43:</label>
            <input asp-for="Talla43" class="form-control"/>
       </div>
              <input class="btn btn-primary" type="submit" id="registrar" value="Registrar">
   </form>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>

</section>

</div>

