@model Software_2.Models.ProductoN

@{
    ViewData["Title"] = "Edición de Producto";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<div class="container">
<div class="row justify-content-center">
    <div>
        <h1 class="display-4">Editar Producto</h1>
        <div align="right">
        <button  class="btn btn-secondary"  onclick="window.location='@Url.Action("ListarN", "Producto")'" >Cancelar</button> 
        </div>
        <form asp-controller="Producto" asp-action="EditN" id="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            
            <div class="form-group">
            <label class="control-label">Talla 25:</label>
            <input asp-for="Talla25" class="form-control"/>
       </div>
              <div class="form-group">
            <label class="control-label">Talla 26:</label>
            <input asp-for="Talla26" class="form-control"/>
       </div>
              <div class="form-group">
            <label class="control-label">Talla 27:</label>
            <input asp-for="Talla27" class="form-control"/>
       </div>
              <div class="form-group">
            <label class="control-label">Talla 28:</label>
            <input asp-for="Talla28" class="form-control"/>
       </div>
              <div class="form-group">
            <label class="control-label">Talla 29:</label>
            <input asp-for="Talla29" class="form-control"/>
       </div>
              <div class="form-group">
            <label class="control-label">Talla 30:</label>
            <input asp-for="Talla30" class="form-control"/>
       </div>     
             
            <div class="form-group" align="center">
                 <button type="submit" class="btn btn-primary">Agregar</button> 
          

            </div>                

        </form>
              
    
    </div>
</div>
</div>

<script>
    document.querySelector('#Editar').addEventListener('submit', function(e) {
      var form = this;
      
      e.preventDefault();
      
      swal({
          title: "¿Está seguro de la acción?",
          text: "Esto cambiará los datos del producto",
          icon: "warning",
          buttons: [
            'Cancelar',
            'Continuar'
          ],
          dangerMode: true,
        }).then(function(isConfirm) {
          if (isConfirm) {
           
              form.submit();
          
          } else {
            swal("Acción cancelada", "El producto no se ha modificado", "error");
          }
        });
    });

    
  </script>
  
  <style>
    .swal-button--confirm {
      background-color: #DD6B55;
    }
  </style>