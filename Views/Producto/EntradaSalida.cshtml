@model Software_2.Models.RegistroS


@{
    ViewData["Title"] = "Edición de Producto";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<div class="background_edit background_total3 pt-5">

<div class="container">
<div class="row justify-content-center">
    <div class="container text-center">
        <h1 style="color: white">Agregar Salida de calzado</h1>

        <div class="container pt-5">
        <table class="table table-hover table-light">
            <thead class="thead-dark text-dark">
                <tr>
                        <th scope="col">
                            Nombre
                        </th>
                        <th scope="col">
                            Codigo
                        </th>
                        <th scope="col">
                            Color
                        </th>
                        <th scope="col">
                            Sexo
                        </th>
                        <th scope="col">
                            Cantidad
                        </th>
                </tr>
            </thead>
                <tr>
                        <td scope="col">
                          @Html.DisplayFor(model => model.Nombre)
                        </td>

                        <td scope="col">
                          @Html.DisplayFor(model => model.Codigo)
                        </td>

                        <td scope="col">
                          @Html.DisplayFor(model => model.Color)
                        </td>

                        <td scope="col">
                          @Html.DisplayFor(model => model.Sexo)
                        </td>

                        <td scope="col">
                          @Html.DisplayFor(model => model.Cantidad)
                        </td>

                </tr>
            <tbody>
              
            </tbody>
        </table> 

        </div>

        <form asp-controller="Producto" asp-action="EntradaSalida" >
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="Nombre" class="form-control" />
            <input type="hidden" asp-for="Codigo" class="form-control" />
            <input type="hidden" asp-for="Color" class="form-control" />
            <input type="hidden" asp-for="Sexo" class="form-control">
            
          
              
            <div class="form-group">
                <label class="control-label" style="color: white;">Cantidad de productos vendidos a agregar</label>
                <div class="container col-sm-6 text-center">
                  <input asp-for="Cantidad" style="background-color:white" class="form-control" />
                </div>
                
            </div>  
                          
             
            <div class="form-group" align="center">
                 <button type="submit" id="agregarEntrada" class="btn btn-success">Agregar</button> 
                 <button  class="btn btn-danger" id="cancelar"  onclick="window.location='@Url.Action("Salidas", "Producto")'" >Cancelar</button> 
          

            </div>                

        </form>
            
    
    </div>
</div>
</div>

</div>


<script>
    document.querySelector('#Editar').addEventListener('submit', function(e) {
      var form = this;
      
      e.preventDefault();
      
      swal({
          title: "¿Está seguro de la acción?",
          text: "Esto cambiará los datos del producto",
          icon: "warning",
          buttons: [
            'Cancelar',
            'Continuar'
          ],
          dangerMode: true,
        }).then(function(isConfirm) {
          if (isConfirm) {
           
              form.submit();
          
          } else {
            swal("Acción cancelada", "El producto no se ha modificado", "error");
          }
        });
    });
    
  </script>
  
  <style>
    .swal-button--confirm {
      background-color: #DD6B55;
    }
  </style>