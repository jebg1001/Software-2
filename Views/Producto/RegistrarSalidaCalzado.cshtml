@model Software_2.Models.RegistroS

@{
    ViewData["Title"] = "Registro de Productos";
}





<div class="background_edit background_total3 pt-5 text-center">
 <h1 class="white" >Agrega tus registros de salida de calzado</h1>




<section class="p-4">

  <div class="container-fluid">
    <div class="row justify-content-center" >
      <div class="col-xl-5">
          <div class="card">
            <div class="justify-content-center text-center">
              <div class="container justify-content-center text-center">
                  <div class="container col-md-10 pt-3">
   
                   <form asp-controller="Producto" asp-action="Registrar">
           <div class="form-group">
                <label class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control"/>
                

            </div>

            <div class="form-group">
                <label class="control-label">Codigo</label>
                <input asp-for="Codigo" class="form-control"/>
                

            </div>

            <div class="form-group">
                <label class="control-label">Color</label>
                <input asp-for="Color" class="form-control"/>
                

            </div>

             <div class="form-group">
              <label>Sección de Calzado</label>
              <select asp-for="Sexo" class="form-control">
                <option value="Hombres">Hombres</option>
                <option value="Mujeres">Mujeres</option>
                <option value="Niños">Niños</option>
              </select>
            </div>

            <div class="form-group text-center" >
              <button type="submit" id="registrar" class="btn btn-success ml-4">Registrar</button>
              <button  class="btn btn-danger" id="cancelar"  onclick="window.location='@Url.Action("RegistrarSalidaCalzado", "Producto")'" >Cancelar</button>
            </div>

      </form>

  

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>

</section>

</div>
